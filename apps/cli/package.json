{
  "name": "@furlow/cli",
  "version": "1.0.1",
  "description": "Declarative Discord Bot Framework - Build bots with YAML, no code required",
  "keywords": ["furlow", "discord", "bot", "cli", "yaml", "declarative", "framework"],
  "homepage": "https://github.com/virgilvox/discord-furlow",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/virgilvox/discord-furlow",
    "directory": "apps/cli"
  },
  "author": "virgilvox",
  "type": "module",
  "bin": {
    "furlow": "./dist/index.js"
  },
  "files": ["dist", "README.md"],
  "scripts": {
    "build": "tsup",
    "clean": "rm -rf dist .turbo",
    "dev": "tsup --watch",
    "lint": "eslint src/",
    "start": "node dist/index.js",
    "test": "vitest run",
    "test:unit": "vitest run",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@furlow/builtins": "workspace:*",
    "@furlow/core": "workspace:*",
    "@furlow/discord": "workspace:*",
    "@furlow/pipes": "workspace:*",
    "@furlow/schema": "workspace:*",
    "@furlow/storage": "workspace:*",
    "chalk": "^5.3.0",
    "commander": "^12.0.0",
    "dotenv": "^16.4.0",
    "inquirer": "^9.2.0",
    "ora": "^8.0.0"
  },
  "devDependencies": {
    "@types/inquirer": "^9.0.7",
    "@types/node": "^20.11.0",
    "tsup": "^8.0.0",
    "typescript": "^5.3.0",
    "vitest": "^1.2.0"
  }
}

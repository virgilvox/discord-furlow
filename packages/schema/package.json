{
  "name": "@furlow/schema",
  "version": "1.0.2",
  "description": "JSON Schema definitions and TypeScript types for FURLOW",
  "keywords": ["furlow", "discord", "schema", "types"],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/virgilvox/discord-furlow",
    "directory": "packages/schema"
  },
  "author": "virgilvox",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./schemas/*": "./dist/schemas/*"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": ["dist"],
  "scripts": {
    "build": "tsup",
    "clean": "rm -rf dist .turbo",
    "dev": "tsup --watch",
    "lint": "eslint src/",
    "test": "vitest run",
    "test:unit": "vitest run",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "ajv": "^8.12.0",
    "ajv-formats": "^2.1.1"
  },
  "devDependencies": {
    "tsup": "^8.0.0",
    "typescript": "^5.3.0",
    "vitest": "^1.2.0"
  }
}

{
  "name": "@furlow/core",
  "version": "1.0.2",
  "description": "Core runtime engine for FURLOW Discord bot framework",
  "keywords": [
    "furlow",
    "discord",
    "bot",
    "runtime"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/virgilvox/discord-furlow",
    "directory": "packages/core"
  },
  "author": "virgilvox",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./parser": {
      "types": "./dist/parser/index.d.ts",
      "import": "./dist/parser/index.js"
    },
    "./expression": {
      "types": "./dist/expression/index.d.ts",
      "import": "./dist/expression/index.js"
    },
    "./actions": {
      "types": "./dist/actions/index.d.ts",
      "import": "./dist/actions/index.js"
    },
    "./actions/handlers": {
      "types": "./dist/actions/handlers/index.d.ts",
      "import": "./dist/actions/handlers/index.js"
    },
    "./events": {
      "types": "./dist/events/index.d.ts",
      "import": "./dist/events/index.js"
    },
    "./flows": {
      "types": "./dist/flows/index.d.ts",
      "import": "./dist/flows/index.js"
    },
    "./state": {
      "types": "./dist/state/index.d.ts",
      "import": "./dist/state/index.js"
    },
    "./automod": {
      "types": "./dist/automod/index.d.ts",
      "import": "./dist/automod/index.js"
    },
    "./scheduler": {
      "types": "./dist/scheduler/index.d.ts",
      "import": "./dist/scheduler/index.js"
    },
    "./locale": {
      "types": "./dist/locale/index.d.ts",
      "import": "./dist/locale/index.js"
    },
    "./components": {
      "types": "./dist/components/index.d.ts",
      "import": "./dist/components/index.js"
    },
    "./embeds": {
      "types": "./dist/embeds/index.d.ts",
      "import": "./dist/embeds/index.js"
    },
    "./canvas": {
      "types": "./dist/canvas/index.d.ts",
      "import": "./dist/canvas/index.js"
    },
    "./analytics": {
      "types": "./dist/analytics/index.d.ts",
      "import": "./dist/analytics/index.js"
    },
    "./errors": {
      "types": "./dist/errors/index.d.ts",
      "import": "./dist/errors/index.js"
    }
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "clean": "rm -rf dist .turbo",
    "dev": "tsup --watch",
    "lint": "eslint src/",
    "test": "vitest run",
    "test:unit": "vitest run --dir src",
    "test:integration": "vitest run --dir tests/integration",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@furlow/schema": "workspace:*",
    "fast-glob": "^3.3.3",
    "jexl": "^2.3.0",
    "yaml": "^2.3.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "discord.js": "^14.14.0",
    "tsup": "^8.0.0",
    "typescript": "^5.3.0",
    "vitest": "^1.2.0"
  },
  "peerDependencies": {
    "@furlow/storage": "workspace:*",
    "canvas": "^2.11.0",
    "discord.js": "^14.14.0"
  },
  "peerDependenciesMeta": {
    "@furlow/storage": {
      "optional": true
    },
    "canvas": {
      "optional": true
    },
    "discord.js": {
      "optional": false
    }
  }
}

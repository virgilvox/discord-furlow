{
  "name": "@furlow/testing",
  "version": "1.0.1",
  "description": "Test utilities and mocks for FURLOW framework",
  "keywords": ["furlow", "discord", "testing", "mocks"],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/virgilvox/discord-furlow",
    "directory": "packages/testing"
  },
  "author": "virgilvox",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./mocks": {
      "types": "./dist/mocks/index.d.ts",
      "import": "./dist/mocks/index.js"
    },
    "./fixtures": {
      "types": "./dist/fixtures/index.d.ts",
      "import": "./dist/fixtures/index.js"
    },
    "./helpers": {
      "types": "./dist/helpers/index.d.ts",
      "import": "./dist/helpers/index.js"
    }
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": ["dist", "fixtures"],
  "scripts": {
    "build": "tsup",
    "clean": "rm -rf dist .turbo",
    "dev": "tsup --watch",
    "lint": "eslint src/",
    "test": "vitest run",
    "test:unit": "vitest run",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@furlow/core": "workspace:*",
    "@furlow/discord": "workspace:*",
    "@furlow/schema": "workspace:*",
    "@furlow/storage": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "tsup": "^8.0.0",
    "typescript": "^5.3.0",
    "vitest": "^1.2.0"
  }
}

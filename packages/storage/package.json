{
  "name": "@furlow/storage",
  "version": "1.0.3",
  "description": "Database adapters for FURLOW bot framework",
  "keywords": ["furlow", "discord", "storage", "database", "sqlite", "postgres"],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/virgilvox/discord-furlow",
    "directory": "packages/storage"
  },
  "author": "virgilvox",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./sqlite": {
      "types": "./dist/sqlite/index.d.ts",
      "import": "./dist/sqlite/index.js"
    },
    "./postgres": {
      "types": "./dist/postgres/index.d.ts",
      "import": "./dist/postgres/index.js"
    },
    "./memory": {
      "types": "./dist/memory/index.d.ts",
      "import": "./dist/memory/index.js"
    }
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": ["dist"],
  "scripts": {
    "build": "tsup",
    "clean": "rm -rf dist .turbo",
    "dev": "tsup --watch",
    "lint": "eslint src/",
    "test": "vitest run",
    "test:unit": "vitest run",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "better-sqlite3": "^9.3.0",
    "pg": "^8.11.0"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.8",
    "@types/node": "^20.11.0",
    "@types/pg": "^8.10.0",
    "tsup": "^8.0.0",
    "typescript": "^5.3.0",
    "vitest": "^1.2.0"
  }
}

{
  "name": "@furlow/discord",
  "version": "0.1.0",
  "description": "Discord.js adapter for FURLOW bot framework",
  "keywords": ["furlow", "discord", "bot", "discord.js"],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/virgilvox/discord-furlow",
    "directory": "packages/discord"
  },
  "author": "virgilvox",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./client": {
      "types": "./dist/client/index.d.ts",
      "import": "./dist/client/index.js"
    },
    "./gateway": {
      "types": "./dist/gateway/index.d.ts",
      "import": "./dist/gateway/index.js"
    },
    "./interactions": {
      "types": "./dist/interactions/index.d.ts",
      "import": "./dist/interactions/index.js"
    },
    "./voice": {
      "types": "./dist/voice/index.d.ts",
      "import": "./dist/voice/index.js"
    },
    "./video": {
      "types": "./dist/video/index.d.ts",
      "import": "./dist/video/index.js"
    }
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": ["dist"],
  "scripts": {
    "build": "tsup",
    "clean": "rm -rf dist .turbo",
    "dev": "tsup --watch",
    "lint": "eslint src/",
    "test": "vitest run",
    "test:unit": "vitest run --dir src",
    "test:integration": "vitest run --dir tests/integration",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@discordjs/opus": "^0.9.0",
    "@discordjs/voice": "^0.17.0",
    "@furlow/core": "workspace:*",
    "@furlow/schema": "workspace:*",
    "discord.js": "^14.14.0",
    "prism-media": "^1.3.5"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "tsup": "^8.0.0",
    "typescript": "^5.3.0",
    "vitest": "^1.2.0"
  }
}
